{
	"name":              "didb",
	"description":       "Website for Deutschkurs in a Box materials.",
	"version":           "0.1.0",
	"main":              "app.coffee",
	"private":           true,
	"keywords":          ["german", "classes", "berlin", "tags"],
	"author":            "Jannis R <mail@jannisr.de>",
	"homepage":          "https://github.com/derhuerst/didb",
	"repository":        "git://github.com/derhuerst/didb.git",
	"license":           "GPL",
	"dependencies": {
		"coffee-script":  "^1.10",
		"basic-auth":     "^1.0.3",
		"express":        "^4.13.4",
		"express-busboy": "^2.4.5",
		"slugg":          "^1",
		"yargs":          "^4.2.0",
		"forever":        "^0.15.1"
	},
	"scripts": {
		"dev-server":    "coffee app.coffee --port 10000",
		"server":        "coffee app.coffee --port 80",
		"start":         "forever start -c coffee ./app.coffee --port 80",
		"stop":          "forever stop ./app.coffee",
		"deploy":        "./deploy",
		"ssh":           "ssh -i ./.scaleway root@didb-2.jannisr.de"
	}
}
